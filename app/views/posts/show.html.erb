<h1><%= @post.artist_name %></h1>
<p>Current Rating: <strong><%= @post.rating %></strong></p>
<%= button_to '^', post_upvote_path(@post) %>
<%= button_to 'v', post_downvote_path(@post) %>


<p><%= @post.content %></p>

<% if @post.comments.any? %>
  <% @post.comments.each do |comment| %>
    <p><%= comment.author %> | Created At: <%= comment.created_at %> | Updated At: <%= comment.updated_at %></p>
    <p><%= comment.content %></p>
    <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %> | <%= link_to "Delete Comment", post_comment_path(@post, comment), :data => {
      :confirm => "You sure you want to delete this comment?",
      :method => "delete" } %> |
  <% end %>
<% else %>
  <p>No comments yet! Be the first one to comment.</p>
<% end %>
<%= link_to "Add a Comment", new_post_comment_path(@post) %>
<br>
<hr>
<%= link_to "Edit this Post", edit_post_path(@post) %> | <%= link_to "Delete this Post", post_path(@post), :data => {
      :confirm => "You sure you want to delete this post?",
      :method => "delete" } %>
<br>
<%= link_to "All Posts", posts_path %>
